{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"include": ["**/*.js", "**/*.ts", "**/*.tsx", "**/*.jsx", "**/*.json"],
		"ignore": ["node_modules/**", "dist/**"]
	}
}
